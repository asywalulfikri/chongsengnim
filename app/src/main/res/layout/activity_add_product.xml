<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Tambah Produk"
        android:textAllCaps="false"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:id="@+id/btn_submit"
        android:background="@drawable/selector_button_login"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_above="@+id/btn_submit"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">


            <EditText
                android:id="@+id/et_name_product"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                android:padding="10dp"
                android:hint="Nama Produk *"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


            <EditText
                android:focusable="false"
                android:clickable="false"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:id="@+id/et_type_product"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                android:padding="10dp"
                android:hint="Jenis Produk *"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <EditText
                    android:id="@+id/et_weight_product"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:inputType="number"
                    android:hint="Berat *"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />


                <EditText
                    android:focusable="false"
                    android:clickable="false"
                    android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:id="@+id/et_satuan_product"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/bg_edittext"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12sp"
                    android:padding="10dp"
                    android:hint="Satuan *"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />


            </LinearLayout>


            <EditText
                android:id="@+id/et_price_product"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                android:inputType="number"
                android:padding="10dp"
                android:hint="Harga Produk *"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <EditText
                android:visibility="gone"
                android:focusable="false"
                android:clickable="false"
                android:id="@+id/et_available_product"
                android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                android:inputType="number"
                android:padding="10dp"
                android:hint="Ketersediaan Produk *"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

            <EditText
                android:id="@+id/et_stock_product"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                android:inputType="number"
                android:padding="10dp"
                android:hint="Stock Produk *"
                android:layout_width="match_parent"
                android:layout_height="40dp" />


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/add_image"
                    android:id="@+id/iv_add_image"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="5dp"
                    android:id="@+id/recycler_photo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="1dp"
                    android:scrollbars="none" />

            </LinearLayout>


            <EditText
                android:id="@+id/et_description_product"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_edittext"
                android:fontFamily="sans-serif-light"
                android:textSize="12sp"
                android:padding="10dp"
                android:hint="Deskripsi Produk *"
                android:layout_width="match_parent"
                android:layout_height="90dp" />


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>