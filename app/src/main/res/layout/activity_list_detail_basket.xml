<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sembako.sayunara.android.ui.component.basket.BasketListDetailActivity">

    <include layout="@layout/toolbar"/>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_above="@+id/llBasket"
        android:layout_below="@+id/toolbar"
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <include layout="@layout/layout_progress_bar_with_text"/>
    <include layout="@layout/layout_empty"/>



    <LinearLayout
        android:id="@+id/llBasket"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


       <!-- <Button
            android:layout_margin="20dp"
            android:id="@+id/btnOrder"
            android:layout_weight="1"
            android:fontFamily="@font/gotham_rounded_bold"
            android:textColor="@color/white"
            android:text="@string/text_order_now"
            android:textSize="13sp"
            android:textAllCaps="false"
            android:background="@drawable/button_general"
            android:layout_width="match_parent"
            android:layout_height="50dp" />-->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrder"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="8dp"
            android:text="@string/text_order_now"
            android:textAllCaps="false"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:backgroundTint="@color/color_btn_disable"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</RelativeLayout>