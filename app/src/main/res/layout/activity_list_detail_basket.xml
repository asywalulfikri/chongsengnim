<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sembako.sayunara.android.ui.component.basket.BasketListDetailActivity">

    <include layout="@layout/toolbar"/>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_above="@+id/tvAddBasket"
        android:layout_below="@+id/toolbar"
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <include layout="@layout/layout_progress_bar_with_text"/>
    <include layout="@layout/layout_empty"/>


    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvAddBasket"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/rounded_button"
        android:gravity="center"
        android:text="@string/text_add_isi_basket"
        android:maxLines="1"
        android:padding="5dp"
        android:layout_above="@+id/llBasket"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:drawableStartCompat="@drawable/ic_add_black_24dp" />


    <LinearLayout
        android:id="@+id/llBasket"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrder"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:text="@string/text_order_now"
            android:textAllCaps="false"
            android:theme="@style/Theme.MaterialComponents.Light"
            app:backgroundTint="@color/color_btn_disable"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</RelativeLayout>