<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_detail"
    android:layout_marginTop="2dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="UseCompoundDrawables">

    <RelativeLayout
        android:paddingLeft="15dp"
        android:paddingStart="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:id="@+id/ivProduct"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/basket_icon" />

        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/ivProduct"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ivProduct">


            <TextView
                android:layout_marginTop="5dp"
                android:id="@+id/tvBasketName"
                android:text="Keranjang Bayu"
                android:maxLines="1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/gotham_rounded_book"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="12sp"
                    android:layout_marginRight="5dp"
                    android:id="@+id/tvBasketDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dibuat 15 APril 2020" />


            </LinearLayout>

        </LinearLayout>


        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:textAllCaps="false"
            android:textSize="12sp"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            tools:ignore="UseAppTint" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
