<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_meat"
    android:layout_marginTop="2dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    android:background="@color/white"
    app:cardElevation="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:ignore="UseCompoundDrawables">


    <RelativeLayout
        android:layout_margin="10dp"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_alignParentLeft="true"
            android:background="@android:color/white"
            android:id="@+id/rl_product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <Button
                    android:id="@+id/btnDiscount"
                    android:paddingRight="2dp"
                    android:text="50 %"
                    android:textSize="11sp"
                    android:textColor="@android:color/white"
                    android:background="@drawable/round_discount"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content" />

                <com.desmond.squarecamera.SquareImageView
                    android:id="@+id/ivProduct"
                    android:background="@drawable/images_loading"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/rl_product_image"
            android:layout_toRightOf="@+id/rl_product_image"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                tools:text="Ayam Potong Besar" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProductPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="Rp 20.000" />

                <TextView
                    android:id="@+id/tvProductUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/nunito_regular"
                    android:textSize="13sp"
                    tools:text="\Kg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvProductDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="sans-serif"
                    android:textSize="10sp"
                    android:visibility="gone"
                    tools:ignore="SmallSp"
                    tools:text="Rp 20.000" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_gree"
                    android:text="+"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvCount"
                    style="@style/StyleTextNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginTop="5dp"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnMin"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:background="@drawable/button_disable"
                    android:text="-"
                    android:textColor="@color/white"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/ic_delete_black_24dp"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>
