<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dist="http://schemas.android.com/apk/distribution"
    xmlns:tools="http://schemas.android.com/tools"
    package="sembako.sayunara.android">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <dist:module dist:instant="true" />

    <application
        android:name=".screen.camera.util.MyApp"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme1"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:theme">
        <activity
            android:name=".screen.product.detailproduct.DetailTransaction"
            android:label="Peninjauan Pesanan" />
        <activity android:name=".screen.product.detailproduct.DetailProductActivity"
            android:label="Detail Pesanan"/>
        <activity
            android:name=".screen.verification.VerificationActivity"
            android:label="Verifikasi"
            android:theme="@style/AppTheme.NoActionBar1" />
        <activity
            android:name=".screen.signup.SignUpActivity"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name="com.desmond.squarecamera.CameraActivity" />
        <activity
            android:name=".screen.product.postproduct.AddProductActivity"
            android:label="Tambah Produk"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name=".screen.camera.AlbumActivity"
            android:label="Tambah Produk"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name=".screen.camera.CropPhotoActivity"
            android:label="Tambah Produk"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <activity
            android:name=".screen.product.listproduct.ListProductActivity2"
            android:label="List Produk"
            android:windowSoftInputMode="stateAlwaysHidden" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity android:name=".screen.mitra.AddMitraActivity" />
        <activity android:name=".screen.mitra.ListMitraActivity" />
        <activity
            android:name=".screen.mainmenu.MainMenuActivity"
            android:windowSoftInputMode="stateAlwaysHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".screen.base.ConnectionActivity" />
        <activity
            android:name=".screen.camera.CameraActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>