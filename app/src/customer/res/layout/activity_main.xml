<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:ignore="MissingPrefix">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5">

        <RelativeLayout
            android:id="@+id/relative_container"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:background="@color/transparent"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:cardMaxElevation="0.5dp">

                <LinearLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:baselineAligned="false">

                    <LinearLayout
                        android:id="@+id/tab_home"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:focusable="true"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            app:srcCompat="@drawable/ic_home_black_24dp"
                            android:id="@+id/iv_tab_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:text="@string/text_menu_home"
                            style="@style/StyleTextViewBottomNavigation"
                            android:id="@+id/tv_tab_home"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_transaction"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:focusable="true"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            app:srcCompat="@drawable/ic_transaction_24"
                            android:id="@+id/iv_tab_transaction"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:id="@+id/tv_tab_transaction"
                            style="@style/StyleTextViewBottomNavigation"
                            android:layout_width="wrap_content"
                            android:text="@string/text_menu_transaction"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab_mobil"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:focusable="true"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/iv_tab_mobil"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:contentDescription="@string/app_name" />


                        <TextView
                            android:id="@+id/tv_tab_mobil"
                            android:visibility="invisible"
                            style="@style/StyleTextViewBottomNavigation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/text_menu_mobil" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/tab_article"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:focusable="true"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            app:srcCompat="@drawable/ic_insert_drive_file_black_24dp"
                            android:id="@+id/iv_tab_article"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name" />


                        <TextView
                            android:id="@+id/tv_tab_article"
                            style="@style/StyleTextViewBottomNavigation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/text_menu_article"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/tab_account"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:focusable="true"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:id="@+id/iv_tab_account"
                            app:srcCompat="@drawable/ic_account_circle_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@string/app_name" />

                        <TextView
                            android:id="@+id/tv_tab_account"
                            style="@style/StyleTextViewBottomNavigation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="@string/text_menu_account" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_mobil"
            android:layout_width="58dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            app:srcCompat="@drawable/add_basket"
            app:layout_anchor="@+id/relative_container"
            app:layout_anchorGravity="center|bottom"
            android:contentDescription="@string/app_name">

        </com.google.android.material.floatingactionbutton.FloatingActionButton>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <FrameLayout
        android:layout_marginBottom="60dp"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</RelativeLayout>
